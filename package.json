{
  "name": "@hdcx/wallet-core",
  "version": "0.1.2",
  "description": "The Simplest Wallet SDK in Typescript",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "rm -rf **/dist && tsup",
    "start": "npm run build && node dist/index.js",
    "lint": "biome lint ./packages",
    "format": "biome format . --write",
    "test": "pnpm run test:node && pnpm run test:browser && pnpm run test:cov",
    "test:node": "vitest run ./src/test/*.spec.ts",
    "test:browser": "vitest run ./src/test/*.spec.ts --environment jsdom",
    "test:cov": "vitest run --coverage"
  },
  "keywords": ["sd-jwt", "vcdm", "jwt"],
  "author": "Hopae Inc. <developers@hopae.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.0",
    "@types/node": "^20.10.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^1.2.2",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jose": "^5.2.2",
    "jsdom": "^24.0.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "tsup": "^8.0.2",
    "typescript": "^5.7.0",
    "vite": "^5.2.14",
    "vitest": "^1.2.2",
    "@types/react-native-base64": "^0.2.2"
  },
  "tsup": {
    "entry": ["./src/index.ts"],
    "sourceMap": true,
    "splitting": false,
    "clean": true,
    "dts": true,
    "format": ["cjs", "esm"]
  },
  "dependencies": {
    "@noble/curves": "^1.9.2",
    "@noble/hashes": "^1.8.0",
    "@sd-jwt/core": "^0.10.0",
    "@sd-jwt/decode": "^0.10.0",
    "@sd-jwt/hash": "^0.10.0",
    "@sd-jwt/present": "^0.10.0",
    "@sd-jwt/types": "^0.10.0",
    "@sd-jwt/utils": "^0.10.0",
    "@vdcs/dcql": "^0.1.9",
    "@vdcs/jwt": "^0.1.9",
    "@vdcs/oid4vci": "^0.1.9",
    "@vdcs/oid4vci-client": "^0.1.9",
    "@vdcs/oid4vp-client": "^0.1.9",
    "expo-crypto": "^14.1.5",
    "expo-secure-store": "^14.2.3",
    "uuid": "^11.1.0",
    "react-native-base64": "^0.2.1"
  },
  "peerDependencies": {
    "react-native-nfc-manager": "^3.16.1",
    "react-native-ble-plx": "^3.5.0",
    "react-native": "0.79.2"
  }
}
